.swiper-tab{  
    margin-top: 8rpx;
    background-color: #fff;
    width: 100%;  
    text-align: center; 
    line-height: 80rpx;
    display: flex;
}

.swiper-tab-list{  
    font-size: 30rpx;  
    width: 33.33%;  
    color: #333;  
}  
.on0 { 
  color: #1296db;  
  border-bottom: 5rpx solid #1296db;
  
}

