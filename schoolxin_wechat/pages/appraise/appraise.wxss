page {
  background-color: #fff;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 30%;
  background-color: rgba(21, 162, 231, 0.2);
}

.logo-image {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 30px;
  height: 30px;
}

.home-text {
  position: absolute;
  top: 50%;
  left: 50px;
  right: 50px;
  line-height: 24px;
  font-size: 14px;
  color: #15a2e7;
}

.logo-text {
  position: absolute;
  top: 15px;
  left: 50px;
  height: 20px;
  line-height: 20px;
  font-size: 13px;
  color: #15a2e7;
  padding-left: 10px;
  border-left: 1px solid #15a2e7;
}

.top-button-bg-1 {
  position: absolute;
  top: 30%;
  left: 50%;
  background-color: rgba(21, 162, 231, 0.8);
  width: 180px;
  height: 180px;
  margin-top: -90px;
  margin-left: -90px;
  border-radius: 50%;
  -webkit-animation: warn 1.8s ease-out;
  -moz-animation: warn 1.8s ease-out;
  animation: warn 1.8s ease-out;
  -webkit-animation-iteration-count: infinite;
  -moz-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
  box-shadow: 1px 1px 30px rgba(21, 162, 231, 0.8); /* 阴影效果 */
}

.top-button-bg-2 {
  position: absolute;
  top: 30%;
  left: 50%;
  background-color: rgba(21, 162, 231, 0.8);
  width: 200px;
  height: 200px;
  margin-top: -100px;
  margin-left: -100px;
  border-radius: 50%;
  -webkit-animation: warn1 1.8s ease-out;
  -moz-animation: warn1 1.8s ease-out;
  animation: warn1 1.8s ease-out;
  -webkit-animation-iteration-count: infinite;
  -moz-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
  box-shadow: 1px 1px 30px rgba(21, 162, 231, 0.8); /* 阴影效果 */
}

.top-button {
  position: absolute;
  top: 30%;
  left: 50%;
  background-color: #15a2e7;
  width: 120px;
  height: 120px;
  margin-top: -60px;
  margin-left: -60px;
  border-radius: 50%;
}

.top-button image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.top-button .top-button-text {
  position: absolute;
  top: 70px;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 16px;
  color: #fff;
}

.record-btn-block {
  position: absolute;
  bottom: 40px;
  left: 0;
  right: 0;
  text-align: center;
}

.record-btn-block .record-btn {
  position: relative;
  font-size: 14px;
  padding-left: 25px;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  color: #15a2e7;
}

.record-btn-block .record-btn image {
  position: absolute;
  top: 0;
  left: 0;
  width: 18px;
  height: 18px;
  padding: 1px;
  border: 1px solid #15a2e7;
  border-radius: 50%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 动画 */

@keyframes warn {
  0% {
    transform: scale(0.7);
    -webkit-transform: scale(0.7);
    opacity: 0.0;
  }

  25% {
    transform: scale(0.8);
    -webkit-transform: scale(0.8);
    opacity: 0.1;
  }

  50% {
    transform: scale(0.9);
    -webkit-transform: scale(0.9);
    opacity: 0.3;
  }

  75% {
    transform: scale(1);
    -webkit-transform: scale(1);
    opacity: 0.5;
  }

  100% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
    opacity: 0.0;
  }
}

@keyframes warn1 {
  0% {
    transform: scale(0.5);
    -webkit-transform: scale(0.5);
    opacity: 0.0;
  }

  25% {
    transform: scale(0.6);
    -webkit-transform: scale(0.6);
    opacity: 0.1;
  }

  50% {
    transform: scale(0.7);
    -webkit-transform: scale(0.7);
    opacity: 0.3;
  }

  75% {
    transform: scale(0.8);
    -webkit-transform: scale(0.8);
    opacity: 0.5;
  }

  100% {
    transform: scale(0.9);
    -webkit-transform: scale(0.9);
    opacity: 0.0;
  }
}
