.container {
  display: flex;
}

.index-header {
  width: 750rpx;
  height: 460rpx;
}

.index-header .index-swiper {
  width: 750rpx;
  height: 460rpx;
  position: absolute;
}

.index-header .index-img {
  width: 690rpx;
  height: 400rpx;
  margin: 30rpx;
  border-radius: 10rpx;
  position: absolute;
}

.index-header .index-icon {
  width: 264rpx;
  height: 35rpx;
  margin-top: 390rpx;
  margin-left: 450rpx;
  position: absolute;
}

.title {
  margin-left: 30rpx;
  font-size: 40rpx;
}

.item-nav {
  width: 330rpx;
  height:200rpx;
}

.item-img {
  width: 330rpx;
  height:200rpx;
  border-radius: 10rpx;
  position: absolute;
}

.item-text {
  position: absolute;
  color: #fff;
  font-size: 30rpx;
  margin-left: 200rpx;
  margin-top: 150rpx;
  text-shadow: black 0.1rem 0.1rem 0.2rem;
  font-style: italic;
}

.item-column {
  margin-left: 30rpx;
  display: flex;
}

.item-row {
  margin-left: 0rpx;
  margin-top: 0rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.lists {
  width: 750rpx;
  
}

.singleList {
  position: relative;
  margin-bottom: 14rpx;
  width: 750rpx;
  height: 210rpx;
}

.singleList .listImage {
  width: 690rpx;
  height: 210rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  position: absolute;
}

.singleList .listText {
  position: absolute;
  color: #fff;
  font-size: 30rpx;
  margin-left: 50rpx;
  margin-top: 160rpx;
  text-shadow: black 0.1rem 0.1rem 0.2rem;
  font-style: italic;
}
