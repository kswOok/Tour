/* pages/my/my.wxss */
page {
  background-color: #ffffff;
}

.form-block {
  position: relative;
  height: 165px;
}

.form-block .form-image {
  width: 100%;
  height: 165px;
  opacity: 0.2;
}

.form-block .user-photo {
  position: absolute;
  width: 60px;
  height: 60px;
  top: 40px;
  left: 50%;
  margin-left: -30px;
  border-radius: 50%;
  border: 3px solid #15a2e7;
  box-shadow: 0 0 5px #cccccc;
}

.form-block .user-name {
  position:absolute;
  width:100px;
  height:20px;
  top:115px;
  left:50%;
  margin-left:-50px;
  font-size:15px;
  text-align:center;
  color:#666666;
}

.form-input-block .form-input-item {
  position: relative;
  width: 100%;
  height: 44px;
}

.form-input-block .form-input-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 10px;
  right: 10px;
  height: 1px;
  background-color: #e5e5e5;
}

.form-input-block .form-input-item:last-child::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 10px;
  right: 10px;
  height: 1px;
  background-color: transparent;
}

.form-input-block .form-input-item .form-input-name {
  position: absolute;
  top: 10px;
  left: 10px;
  height: 24px;
  line-height: 24px;
  font-size: 15px;
  color: #333333;
}

.form-input-block .form-input-item .form-input-value {
  position: absolute;
  top: 10px;
  right: 10px;
  height: 24px;
  line-height: 24px;
  font-size: 15px;
  color: #999999;
}

.form-input-block .form-input-item input.form-input-value {
  position: absolute;
  top: 10px;
  left: 120px;
  right: 10px;
  height: 24px;
  line-height: 24px;
  font-size: 15px;
  color: #333333;
}

.form-input-block .form-input-item .form-input-arrow {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 24px;
  height: 24px;
}