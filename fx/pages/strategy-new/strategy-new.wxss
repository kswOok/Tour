/* pages/strategy-new/strategy-new.wxss */

.container {
  height: 100%;
  width: 100%;
  display: block;
}

.title {
  padding: 0 40rpx;
  margin: 28rpx 0;
  display: block;
  font-weight: 500;
  font-size: 32rpx;
}

.table {
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;
}

.tr1 {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: auto;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-align-content: center;
  align-content: center;
  box-sizing: border-box;
}



.td {
  text-align: center;
  margin-right: 50rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  position: relative;
  display: inline-block;
  margin-bottom: 50rpx;
  width: 300rpx;
  height: 300rpx;
}

.tr .td:nth-child(2n) {
  margin-right: 0;
}

.td image {
  width: 300rpx;
  height: 300rpx;
}

.intro {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
  left: 0;
  display: inline-block;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background: -webkit-linear-gradient(rgba(0, 0, 0, 0), rgb(0, 0, 0));
  background: -o-linear-gradient(rgba(0, 0, 0, 0), rgb(0, 0, 0));
  background: -moz-linear-gradient(rgba(0, 0, 0, 0), rgb(0, 0, 0));
  background: linear-gradient(rgba(0, 0, 0, 0), rgb(0, 0, 0));
  font-size: 26rpx;
  border-radius: 0 0 9rpx 9rpx;
  color: #fff;
}

.drawback {
  padding: 0 40rpx;
}

.drawback .title {
  padding: 0;
  margin-top: 40rpx;
}

.cont {
  font-size: 28rpx;
}

.cont text {
  display: block;
  margin-bottom: 18rpx;
}

.know-item {
  margin-bottom: 20rpx;
}

.foot-img {
  width: 100%;
  height: auto;
  position: relative;
  margin: 0;
  padding: 0;
  margin-bottom: 16rpx;
}

.foot-img image {
  width: 100%;
  height: 300rpx;
}

.foot-img .intro {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 0;
}
