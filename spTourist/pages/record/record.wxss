.record-item {
  position: relative;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #e5e5e5;
  background-color: #ffffff;
}

.record-item view {
  font-size: 14px;
  position: absolute;
  top: 10px;
  left: 10px;
  height: 20px;
  line-height: 20px;
}

.record-item image {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 20px;
  height: 20px;
}
::-webkit-scrollbar {
 width: 0;
 height: 0;
 color: transparent;
}