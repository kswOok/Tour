body { height: 100%; background-size:100% 100%; }
.loading{ width:190px; height:207px; position:fixed; top:864px; left:576px; }
.index-header{ width:100%; position:relative; height: 47%; }
.index-header .layout{ width:100%; height:1797px; position:absolute; left:0; top:0; }
.index-header .index-img{ width:2304px; height: 100%; margin:0 calc(50% - 1152px); }
.index-header .index-icon{ width:489px; height:224px; position:absolute; top:656px; right:840px; }
.container { height: 100%; width: 100%; position:relative; }
.table .td image{ width: 158px; height: 161px; vertical-align:middle; }
.table .td text{ vertical-align:middle; margin-left:77px; color:#222; font-size:18.5px; }
.table { border: 0px solid darkgray; width: 100%; position: fixed; bottom: 0; background:#fff; z-index:99; height:53%; box-sizing:border-box; padding-bottom: 5%; padding-top: 5%; }
.tr { display: -webkit-flex; display: flex; width: 100%; -webkit-justify-content: center; justify-content: center; height: 362px; line-height: 313px; -webkit-align-content: center; align-content: center; }
.td { width: 50%; -webkit-justify-content: center; justify-content: center; }
.td image { width: 40rpt; height: 40rpt; }
.tr .td:first-child { text-align: right; padding-right:201px; }
.tr .td:nth-child(2) { text-align: left; padding-left:201px; }
.call-layout{ position:absolute; left:0; top: 0; width:100%; height:100%; background:rgba(0,0,0,0.4); z-index:9999; }
.content-layout{ position:fixed; left:0; bottom:0; width:100%; box-sizing:border-box; background:#fff; z-index:99999; }
.emergency-calls,.plolice-calls,.cancle-call{ text-align:center; height:316px; line-height:316px; font-size:21.5px; background:#fff; }
.plolice-calls{ color:#000; border-bottom:5px solid #909090; }
.plolice-calls text{ letter-spacing:20px; margin-left:20px; }
.emergency-calls{ border-bottom:2px solid #e3e3e3; letter-spacing:20px; color:#000; width:88%; margin:0 auto; }
.emergency-calls text{ letter-spacing:20px; margin-left:20px; }
.cancle-call{ background:#222; color:#fff; }
.cancle-call text{ letter-spacing:86px; margin-left:86px; }