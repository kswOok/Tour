.container {
  height: 100%;
  width: 100%;
  display: block;
  margin-bottom: 115px;
}

.image {
  position: relative;
  top: 11px;
  width: 100%;
  height: 256px;
  margin-bottom: 40px;
}

.image image {
  width: 100%;
  height: 100%;
}

.text, .wrap {
  margin: 0 30px;
  margin-top: 10px;
  font-size: 20px;
  font-weight: 100;
}

.text wx-text {
  display: block;
}



.text .title {
  font-weight: 166;
  font-size: 22px;
  padding-bottom: 15px;
}

.text .type {
  font-size: 14px;
  color: #929292;
  margin-bottom: 30px;
}

.text .time {
  font-size: 14px;
  color: #929292;
  margin-bottom: 15px;
}



.text .detail {
  text-align: justify;
  line-height: 40px;
  font-size: 18px;
  font-weight: 100;
}


.wrap image {
  width: 100%;
  margin: 19px 0;
}

.wrap .title {
  font-size: 18px;
}

.wrap .photoBy {
  text-align: right;
  margin-bottom: 38px;
  font-size: 24px;
  color: #888;
}

.wrap .content {
  font-size: 18px;
  line-height: 40px;
}

.collect {
  display:none;
  position: fixed;
  bottom: 40px;
  right: 46px;
  width: 105px;
  height: 105px;
  border-radius: 52px;
  background: #f1f1f1;
  text-align: center;
  vertical-align: middle;
}

.collect-img {
  display:none;
  width: 48px;
  height: 41px;
  margin-top: 32px;
}


